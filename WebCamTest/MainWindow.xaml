<Window x:Class="WebCamTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebCamTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        x:Name="Window">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="277*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="38*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" x:Name="rawRGB" Height="100" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <ComboBox Grid.Column="0" Grid.Row="0" x:Name="SelectedDevice" HorizontalAlignment="Stretch" Margin="0,10,0,0" VerticalAlignment="Top" ItemsSource="{Binding AvailableDevices, ElementName=Window}" SelectedItem="{Binding CurrentDevice, ElementName=Window}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Stretch" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>
</Window>
